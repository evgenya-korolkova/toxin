                    select
                        option(value="1")= "HTML верстка верстка верстка"     
                        option(value="2" )= "CSS"     
                        option(value="3")= "JS"     
                        option(value="4")= "PHP"  

            .input_mb_40
                +dropdown("удобства номера", {type: "rooms"})       

            .input_mb_40
                +checkbox(
                    "checkbox buttons", 
                    "rules",
